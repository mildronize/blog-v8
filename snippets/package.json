{
  "name": "vite-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:vite": "cross-env VITE_SEARCH_METADATA_HOSTNAME=http://localhost:1111 vite",
    "dev:search-metadata": "cd ../ && make serve",
    "test": "tsc --noEmit && bun test",
    "build": "tsc && vite build",
    "generate-id-mapper": "bun run src/scripts/generate-id-mapper.ts",
    "build:search-metadata": "bun run src/scripts/build-search-metadata.ts",
    "add-id": "bun run src/scripts/add-id.ts",
    "build:watch": "nodemon --exec 'bun run build' --watch src --ext ts,tsx,css,html",
    "preview": "vite preview",
    "resume:watch": "nodemon --exec 'bun run resume:build' --watch src --ext json",
    "resume:build": "mkdir -p  ../public/resume && resumed render src/resume.json --theme jsonresume-theme-onepage-web --output ../public/resume/index.html"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.12",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "esbuild": "^0.21.3",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "type-fest": "^4.30.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.2"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@azure/functions": "^4.6.0",
    "@iarna/toml": "^2.2.5",
    "@marplex/hono-azurefunc-adapter": "^1.0.1",
    "@preact/preset-vite": "^2.9.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "flexsearch": "^0.7.43",
    "fs-extra": "^11.2.0",
    "grapheme-splitter": "^1.0.4",
    "gray-matter": "^4.0.3",
    "hono": "^4.6.14",
    "jsonresume-theme-onepage-web": "^1.0.4",
    "p-all": "^5.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark": "^15.0.1",
    "resumed": "^4.0.0",
    "strip-markdown": "^6.0.0",
    "tiny-glob": "^0.2.9",
    "url-join": "^5.0.0",
    "use-keyboard-shortcuts": "^2.2.3",
    "valibot": "^1.0.0-beta.9",
    "wordcut": "^0.9.1",
    "zod": "^3.24.1"
  }
}